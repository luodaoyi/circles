<!doctype html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <title>Circles 后台管理</title>

  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>
  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

</head>
<body>

<head name="top">
  <div class="d-flex flex-column flex-md-row align-items-center p-3 px-md-4 mb-3 bg-white border-bottom box-shadow">
    <h5 class="my-0 mr-md-auto font-weight-normal"><a href="/">Circles 后台管理</a></h5>
    <nav class="my-2 my-md-0 mr-md-3">

      <a class="p-2 text-dark" href="<%= admin_users_path %>">用户管理</a>
    </nav>

    <% if session[:user_id] %>
      <%= link_to "#{@user.username},退出", session_path(@user), method: 'delete', class: 'btn btn-outline-dark' %>
    <% else %>
      <%= link_to '登录', new_session_path, class: 'btn btn-outline-primary' %>
    <% end %>
  </div>


  <div class="container">
    <% if flash[:notice] %>
      <div class="alert alert-info"><%= flash[:notice] %></div>
    <% end %>

    <%= yield %>


  </div>


</body>
</html>