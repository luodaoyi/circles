<h1>管理后台 - 用户列表</h1>


<div class="row">
  <div class="col-sm-12">

    <form class="form-inline" action="<%= search_admin_users_path %>" method="get" >
      <div class="form-group">
        <label for="search-name">用户名:</label>
        <input type="text" name="username" id="search-name" class="form-control" placeholder="" value="<%= params[:username] %>" />
      </div>

      <div class="form-group">
        <input type="submit" name="搜索" class="btn btn-primary">
      </div>

    </form>



    <table class="table">
      <tr>
        <th>ID</th>
        <th>用户名</th>
        <th></th>
      </tr>

      <% @users.each do |user| %>

        <tr>
          <td><%= user.id %></td>
          <td><%= user.username %></td>
          <td></td>
        </tr>
      <% end %>

      <%= will_paginate @users %>

    </table>
  </div>
</div>